<div class="mt-4">
    <div class="row">
        {{#each toys}}
        <div class="col-sm-6 col-lg-3">
            <div class="card">
                <a href="/toys/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top">
                </a>

                <div class="card-body">
                    <a href="/toys/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>

                    <p class="card-text">{{this.description}}</p>
                    <a href="/toys/{{this.slug}}"><a href="#" class="btn btn-primary">Buy</a></a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>